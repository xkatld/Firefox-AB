{
  "name": "browser-manager",
  "version": "1.0.0",
  "description": "Multi-account browser profile manager with independent data directories",
  "author": "Browser Manager",
  "type": "module",
  "main": "src/gui/main.js",
  "engines": {
    "node": ">=24.0.0",
    "npm": ">=11.0.0"
  },
  "scripts": {
    "start": "electron ./src/gui/main.js",
    "cli": "node ./src/cli.js",
    "dev": "electron ./src/gui/main.js --dev",
    "build": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder",
    "build:win": "electron-builder -w --publish=never",
    "build:linux": "CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder -l",
    "build:all": "electron-builder -w -l --publish=never"
  },
  "dependencies": {
    "playwright": "^1.45.0",
    "commander": "^11.0.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0"
  },
  "build": {
    "appId": "com.browsermanager.app",
    "productName": "Browser Manager",
    "files": [
      "src/**/*",
      "profiles/**/*",
      "plugins/**/*",
      "browsers/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        },
        "portable"
      ],
      "certificateFile": null,
      "certificatePassword": null,
      "signingHashAlgorithms": []
    },
    "linux": {
      "target": [
        "AppImage",
        "zip"
      ]
    }
  }
}
