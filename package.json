{
  "name": "firefox-ab",
  "version": "1.0.0",
  "description": "一个面向个人使用的 Firefox 多实例指纹浏览器管理器，核心目标是让每个账号拥有独立、可冻结/解冻的浏览器数据目录，同时提供轻量的界面/脚本来启动指定 profile。",
  "main": "dist/cli.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "lint": "tsc --noEmit",
    "test": "npm run lint"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "commander": "^14.0.2",
    "fs-extra": "^11.3.2",
    "tar": "^7.5.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.1",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
